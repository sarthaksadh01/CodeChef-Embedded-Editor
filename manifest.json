{
    "name": "CodeChef ide ",
    "description": "Add IDE to problem page",
    "version": "0.1",
    "permissions": [
        "tabs",
        "<all_urls>",
        "webNavigation"
    ],
    "browser_action": {
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "http://www.codechef.com/*problems/*",
                "https://www.codechef.com/*problems/*"
            ],
            "js": [
                "./lib/js/jquery.js",
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background" : {
      "scripts": ["background.js"],
      "persistent": true
    },
    "web_accessible_resources": [
        "ide.html"
    ],
    "manifest_version": 2
}