{
    "name": "CodeChef Embedded Editor",
    "description": "Embeds IDE to codechef problems page",
    "version": "0.2",
    "permissions": [
        "tabs",
        "http://www.codechef.com/",
        "https://www.codechef.com/",
        "webNavigation"
    ],
    "browser_action": {
        "default_icon": "images/icon.png"
    },
    "icons": { 
           "16": "images/icon.png",
          "128": "images/icon_128.png" },
    "background" : {
      "scripts": ["src/background.js"],
      "persistent": true
    },
    "web_accessible_resources": [
        "src/ide.html",
        "src/modules/js/common_functions.js",
        "src/modules/js/config.js"
    ],
    "manifest_version": 2
}
